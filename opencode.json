{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-pty@0.2.3"
  ],
  "instructions": [
    ".agents/rules/*.md"
  ],
  "mcp": {
    "backlog": {
      "type": "local",
      "command": [
        "backlog",
        "mcp",
        "start"
      ],
      "environment": {
        "BACKLOG_CWD": "C:\\repos\\github.com\\alefcarlos\\mcpserver-auth-demo"
      }
    },
    "aspire": {
      "type": "local",
      "command": [
        "aspire",
        "mcp",
        "start"
      ]
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "environment":{
        "PLAYWRIGHT_MCP_BROWSER": "msedge"
      }
    }
  }
}